port_range = 7881-7889
scgi_local = /home/tom/.config/rtorrent/scgi.sock
encryption = allow_incoming,try_outgoing,enable_retry

# limits
max_peers = 500
max_peers_seed = 100
max_uploads = 20
upload_rate = 100
download_rate = 0

# default dirs
directory = /home/tom/downloads/torrents/
session = /home/tom/.config/rtorrent/session/

# on finish hook
method.set_key = event.download.finished,notify_me,"execute=/home/tom/.local/bin/torrentdone,$d.name="
